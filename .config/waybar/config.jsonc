{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "margin": "10 10 0 10",
  "reload_style_on_change": true,
  "modules-left": [
    "niri/workspaces",
    "keyboard-state"
  ],
  "modules-center": ["clock"],
  "modules-right": [
    "tray",
    "pulseaudio",
    "network",
    "battery",
    "custom/powermenu"
  ],

  //***************************
  //*  Modules configuration  *
  //***************************

  "niri/workspaces": {
  },

  "keyboard-state": {
    //"numlock": true,
    "capslock": true,
    "format": "{name} {icon} ",
    "format-icons": {
      "locked": "",
      "unlocked": ""
    }
  },

  "clock": {
    "format": "{:%a, %d %b, %H:%M}",
    "on-click": "gnome-calendar",
    "tooltip": false
  },

  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "reverse-scrolling": 1,
    "format": "{volume}% {icon} {format_source}",
    "format-bluetooth": "{volume}% {icon} {format_source}",
    "format-bluetooth-muted": " {icon} {format_source}",
    "format-muted": " {format_source}",
    "format-source": "{volume}% ",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", ""]
    },
    "on-right-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +10%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -10%",
    "on-click": "pavucontrol",
    "min-length": 13
  },

  "network": {
    "format-wifi": "{essid} ({signalStrength}%) ",
    "format-ethernet": "",
    "tooltip": "false",
    "format-linked": "{ifname} ",
    "format-disconnected": "Disconnected",
    "on-click": "env XDG_CURRENT_DESKTOP=GNOME gnome-control-center wifi"
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% ",
    "format-plugged": "{capacity}% ",
    "format-alt": "{time} {icon}",
    "format-icons": ["", "", "", "", "", "", "", "", "", ""],
    "on-click": "env XDG_CURRENT_DESKTOP=GNOME gnome-control-center power"
  },

  "tray": {
    "spacing": 6
  },

  "custom/powermenu": {
    "format": "{icon} ",
    "format-icons": ["⏻"],
    "tooltip-format": "Power Menu",
    "on-click": "fuzzel-power-menu"
  }
}
