#!/usr/bin/env bash

## UNUSED

#### Options ###
power_off=" Shutdown"
reboot="󰜉 Reboot"
log_out="󰍃 Log Out"

# Options passed to fuzzel
options="$power_off\n$reboot\n$log_out"
lines="$(echo "$options" | grep -oF '\n' | wc -l)"
rofi_command="fuzzel -d -w 14 -l $((lines+1))"
chosen="$(echo -e "$options" | $rofi_command )"
case $chosen in
    "$power_off")
		systemctl poweroff
        ;;
    "$reboot")
		systemctl reboot 
        ;;
    "$log_out")
        niri msg action quit -s
        ;;
esac
